body 
	font-family Fira Sans
	
input
	font-family inherit
	border none
	
.container
	padding 0 20px
	
	@media screen and (min-width: 768px)
		padding 0 24px
		
	@media screen and (min-width: 1420px)
		max-width 1340px
		width 1340px
		
.column
	
	padding 0 .5em
	
	@media screen and (min-width: 1280px)
		padding 0 15px
		
	
.container-inner
	
	max-width 590px
	margin 0 auto
	overflow hidden
	
	@media screen and (min-width: 768px)
		max-width 748px
		
	@media screen and (min-width: 1280px)
		max-width 882px
	
	@media screen and (min-width: 1420px)
		max-width 1340px
	
.overflow_hidden
	overflow hidden
	
.flex-flow_column-md
	flex-flow column
	
	@media screen and (min-width: 1280px)
		flex-flow row
		
.flex-flow_row
	display flex
	flex-flow row

.gradient
	padding-right 0
	padding-bottom .75em
	background linear-gradient(to top, $logo-color_yellow 1.75em, transparent 1.75em)
	background-clip content-box
		

.bg-image
	position absolute
	top 0px
	left 0px
	bottom 0px
	right 0px
	min-width 100%
	min-height 100%
	margin auto
	
	@media screen and (min-width: 1280px)
		top 0
		left 56.46%
		bottom 0
		right 0
		min-width auto
		
.filter
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color #000
	opacity .7
	
	@media screen and (min-width: 1280px)
		display none
		
.carousel__nav
	position absolute
	left 50%
	bottom 0
	text-align center
	margin 0 auto
	transform translateX(-50%)

.nav__out
	display inline-block
	width 40px
	height 40px
	margin-right 5px
	
	&:hover
		.nav__inner
			background-color #4C4B4B
	
	&_active
		border 1px solid #707070
		border-radius 50%
		
		&:hover
			opacity .5
	
	&_arrow
		margin-right 16px
		
		&:hover
			.nav__inner
				background none
		
	
.nav__inner
	display inline-block
	position relative
	top 12px
	width 12px
	height 12px
	background-color #EDEDE8
	border-radius 50%
		
	&_active
		background-color #4C4B4B
		
	&_arrow
		top 10px
		width 8px
		height 8px
		border-left 2px solid #807C7C
		border-top 2px solid #807C7C
		background none
		border-radius 0
		
		&:hover
			background none
		
		&-left
			transform rotate(-45deg)
		
		&-right
			transform rotate(135deg)

.automation
	position relative
	height 413px
	padding 44px 0
	text-align center
	overflow hidden
	
	@media screen and (min-width: 768px)
		height 720px
	
	@media screen and (min-width: 1280px)
		text-align left
		

.slideshow
	position relative
	overflow hidden
	
	&__carousel-nav
		bottom 12px
		
	@media screen and (min-width: 768px)
		&__carousel-nav
			bottom 20px
	
	@media screen and (min-width: 1280px)
		padding-bottom 72px
		
		&__nav-wrapper
			position relative
			
		&__carousel-nav
			bottom 5px
		
	@media screen and (max-width: 1279px)
	
		&__nav-out_active
			border-color #fff
			
		&__nav-inner
			background-color #fff
			opacity .3
			
		&__nav-inner_active
			opacity 1
		
		&__nav-out:hover
			
			& .nav__inner
				background-color #fff
				opacity 1
				
		&__nav-out_active:hover
			opacity .3
			
			& .nav__inner
				background-color #fff
				
	
