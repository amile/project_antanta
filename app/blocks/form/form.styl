.form
	display inline-block
	
	margin 0 auto
	padding 20px 10px
	text-align left
	// background-color $logo-color_yellow
	background-image url('../images/form-bg_sm.png')
	background-repeat no-repeat
	background-size 100% 100%
	
	&__bg
		padding 10px
		background-color #fff

	&__input
		display block
		width 280px
		
		margin-bottom 14px
		padding 11px 30px
		font-family inherit
		font-size 16px
		line-height 24px
		color #807C7C
		border 1px solid #EDEDE8
	
	&__btn
		padding 15px 29px
		font-size 16px
		font-weight 500
		letter-spacing 1px
		border 2px solid transparent
		
		&:hover
			color #807C7C
			background-color #fff
			border 2px solid $logo-color_yellow
	
	@media screen and (min-width: 320px) and (max-width: 350px)
		width 100vw
		
		margin-left -1rem
			
	@media screen and (min-width: 330px) and (max-width: 350px)
		padding-left 1em
		
		padding-right 1em
	
	@media screen and (min-width: 768px)
		padding 20px 16px
		background-image url('../images/form-bg.png')
		
		&__bg
			padding 40px 30px
		
		&__input
			width 360px
			
			margin-bottom 1em
			
	@media screen and (min-width: 1280px)
		float right
	
	